            $(function() {
                let socket = io();
                $('#message_form').submit(() => {
                    socket.emit('message', $('#input_msg').val());//送る。
                    $('#input_msg').val('');
                    return false;
                });
                socket.on('message', (msg) => {
                    console.log('フロントでの処理＝' + msg);
                    $.ajax({//ここでサーバーに対しての通信を行う。
                        date: msg
                    }).done(function(date) {//データの送信に成功した際の処理。
